<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img_background">

    <EditText
        android:id="@+id/editText_friend"
        android:layout_marginTop="30dp"
        android:layout_width="188dp"
        android:background="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_height="40dp"
        android:hint="@string/recherche_d_ami"
        />

    <Button
        android:id="@+id/button_add"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:background="#04ea00"
        android:text="Add"
        android:layout_toRightOf="@+id/editText_friend"
        />

    <Button
        android:id="@+id/button_remove"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="#04ea00"
        android:text="Remove"
        android:layout_toRightOf="@+id/button_add"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/brain"
        />

    <Button
        android:id="@+id/button_friendList"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="100dp"
        android:background="#04ea00"
        android:text="Friend List"
        />






</RelativeLayout>